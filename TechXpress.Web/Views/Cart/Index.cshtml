@model List<TechXpress.Services.DTOs.OrderDetailDTO>

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <form asp-action="UpdateCart" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].ProductId</td>
                        <td><input type="number" name="updatedCart[@i].Quantity" value="@Model[i].Quantity" class="form-control" /></td>
                        <td>@Model[i].Price.ToString("C")</td>
                        <td>@(Model[i].Quantity * Model[i].Price).ToString("C")</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-productId="@Model[i].ProductId" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Update Cart</button>
    </form>

    <a asp-action="ClearCart" class="btn btn-warning">Clear Cart</a>
    <a asp-controller="Order" asp-action="Create" class="btn btn-success">Proceed to Checkout</a>
}
