@model TechXpress.Services.DTOs.LoginDTO

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
    </div>
    <div class="form-group">
        <input asp-for="RememberMe" type="checkbox" /> Remember Me
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<a asp-action="Register">Don't have an account? Register</a>
