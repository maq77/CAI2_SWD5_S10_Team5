@model X.PagedList.IPagedList<TechXpress.Services.DTOs.ProductDTO>

@if (Model.PageCount > 1)
{
    <nav>
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a href="#" class="page-link page-button" data-page="@Model.PageNumber-1">&laquo; Prev</a>
                </li>
            }
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a href="#" class="page-link page-button" data-page="@i">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a href="#" class="page-link page-button" data-page="@Model.PageNumber+1">Next &raquo;</a>
                </li>
            }
        </ul>
    </nav>
}
