@model IEnumerable<TechXpress.Services.DTOs.ProductDTO>

<h2>Product List</h2>
<a asp-action="Create" class="btn btn-primary">Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Images</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (product.Images != null && product.Images.Any())
                    {
                        @foreach (var image in product.Images)
                        {
                            <img src="@image.ImagePath" width="100" style="margin-right:5px;" />
                        }
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
