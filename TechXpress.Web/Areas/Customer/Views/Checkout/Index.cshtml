@model TechXpress.Services.DTOs.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (Model.CartItems != null && Model.CartItems.Any())
{
    <form asp-action="ProcessPayment" method="post">
        <h4>Your Items</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Qty</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>

        <h4>Choose Payment Method</h4>
        @foreach (var gateway in Model.AvailablePaymentGateways)
        {
            <div>
                <input type="radio" name="gatewayName" value="@gateway" required /> @gateway
            </div>
        }

        <button type="submit" class="btn btn-success">Pay Now</button>
    </form>
}
else
{
    <p>Your cart is empty. <a asp-area="Customer" asp-controller="Cart" asp-action="Index">Go back to cart</a>.</p>
}
