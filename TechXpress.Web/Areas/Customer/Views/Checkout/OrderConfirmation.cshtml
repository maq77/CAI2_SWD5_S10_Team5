@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <div class="d-inline-block p-3 bg-success bg-opacity-25 rounded-circle mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg>
                        </div>
                    </div>
                    <div class="alert alert-success">
                        <h4>Thank you for your order!</h4>
                        <p>Your transaction ID is: <strong>@ViewBag.TransactionId</strong></p>
                        <a class="btn btn-primary" href="/">Back to Home</a>
                    </div>
                    <h1 class="display-5 mb-3">Payment Successful!</h1>
                    <p class="lead mb-4">Thank you for your purchase. Your order has been processed successfully.</p>

                    <div class="d-grid gap-3">
                        <a asp-controller="Order" asp-action="Details" asp-area="Customer" asp-route-id="@ViewBag.OrderId" class="btn btn-primary">View Order Details</a> 
                        <a asp-controller="Home" asp-action="Index" asp-area="Customer" class="btn btn-outline-secondary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
