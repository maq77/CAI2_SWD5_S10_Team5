@model TechXpress.Services.DTOs.OrderDTO

@{
    ViewData["Title"] = "Order Success !";
}


<div class="container my-5 text-center">
    <div class="card p-5">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 64px;"></i>
        </div>
        <h1 class="mb-4">Order Successful!</h1>
        <p class="mb-3">Thank you for your purchase. Your order has been placed successfully.</p>
        <p class="mb-3">Order #@Model.Id</p>
        <p class="mb-4">Date: @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p class="mb-4">Total: $@Model.TotalAmount.ToString("F2")</p>
        
        <div class="mt-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary me-3">Continue Shopping</a>
            <a asp-area="Customer" asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">View Order Details</a>
        </div>
    </div>
</div>
