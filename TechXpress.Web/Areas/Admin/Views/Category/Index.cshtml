@model IEnumerable<TechXpress.Services.DTOs.CategoryDTO>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin - Category List</h2>

<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">Add Category</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr id="row-@category.Id">
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-warning">Edit</a>
                    <button class="btn btn-danger delete-category" data-id="@category.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/category.js"></script>
