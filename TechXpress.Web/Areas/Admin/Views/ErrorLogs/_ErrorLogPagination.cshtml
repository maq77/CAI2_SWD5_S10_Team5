@model TechXpress.Services.DTOs.ViewModels.ErrorLogIndexViewModel
@if (Model.TotalPages > 1)
{
    <div class="pagination-wrapper">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <label class="me-2">Show:</label>
                    <select class="form-select form-select-sm" style="width: auto;" id="pageSizeSelect">
                        @*<option value="10" @(Model.PageSize == 10 ? "selected" : "")>10</option>
                        <option value="25" @(Model.PageSize == 25 ? "selected" : "")>25</option>
                        <option value="50" @(Model.PageSize == 50 ? "selected" : "")>50</option>
                        <option value="100" @(Model.PageSize == 100 ? "selected" : "")>100</option>*@
                    </select>
                    <span class="ms-2 text-muted">entries per page</span>
                </div>
            </div>
            <div class="col-md-6">
                <nav aria-label="Error log pagination">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="ErrorLog.changePage(1)" data-page="1">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="ErrorLog.changePage(@(Model.CurrentPage - 1))" data-page="@(Model.CurrentPage - 1)">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="#" onclick="ErrorLog.changePage(@i)" data-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="ErrorLog.changePage(@(Model.CurrentPage + 1))" data-page="@(Model.CurrentPage + 1)">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="ErrorLog.changePage(@Model.TotalPages)" data-page="@Model.TotalPages">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <small class="text-muted">Showing @Model.StartRecord to @Model.EndRecord of @Model.TotalCount entries</small>
            </div>
        </div>
    </div>
}
