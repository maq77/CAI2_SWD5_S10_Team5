<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel | TechXpress</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- Third-party plugins next -->
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />
    <link type="text/css" rel="stylesheet" href="~/css/chatbot.css" />

    <!-- Update Font Awesome to use a CDN instead -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom CSS last -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/TechXpress.Web.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false) <!-- Optional styles section -->
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">
    <!-- Navbar Partial -->
        @* @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminSidebar.cshtml") *@

        <!-- Main Content -->
        <div class="flex-grow-1 d-flex flex-column">

            <!-- Navbar -->
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Navbar.cshtml")

            <!-- Main Body -->
            <main class="flex-grow-1 p-4">
                @RenderBody()
                @await Html.PartialAsync("_Chatbot")
            </main>

            <!-- Footer -->
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Footer.cshtml")
            
        </div>
    </div>

    <!-- Footer Partial -->
   
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Place at the end of your body -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <!--<script src="~/js/bootstrap.bundle.min.js"></script>-->
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/chatbot.js"></script>

    <!-- <script src="~/js/electro.js" asp-append-version="true"></script> -->
    <script src="~/js/home.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth.js"></script>
    <script src="~/js/cart.js"></script>
    <script src="~/js/category.js"></script>
    <script src="~/js/product-page.js"></script>
    <script src="~/js/home-page.js"></script>
    @RenderSection("Scripts", required: false) <!-- Optional scripts section -->
</body>
</html>
