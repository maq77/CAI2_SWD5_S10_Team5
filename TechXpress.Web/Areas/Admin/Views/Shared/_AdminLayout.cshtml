@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = ViewData["Title"] ?? "Admin Panel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechXpress</title>
    <!-- Core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">
        <input type="hidden"
               id="RequestVerificationToken"
               name="__RequestVerificationToken"
               value="@Xsrf.GetAndStoreTokens(Context).RequestToken" />

        <!-- Sidebar -->
        <partial name="_AdminSidebar" />

        <!-- Main Content -->
        <div class="flex-grow-1 d-flex flex-column">
            <!-- Top Navbar -->
            <partial name="_AdminNavbar" />

            <!-- Main Content Area -->
            <main class="flex-grow-1 p-4">
                @RenderBody()
            </main>

            <!-- Footer -->
            <partial name="_AdminFooter" />
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom Scripts -->
    
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    @* <script src="~/js/dashboard-charts.js" asp-append-version="true"></script> *@

    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/product-create.js" asp-append-version="true"></script>
    <script src="~/js/category.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>