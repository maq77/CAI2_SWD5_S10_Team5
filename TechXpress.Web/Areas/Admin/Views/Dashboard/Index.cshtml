@model TechXpress.Services.DTOs.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-container">
    <div class="page-header">
        <h1>Admin Dashboard</h1>
        <p>Welcome back! Here's what's happening with your store today.</p>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card primary">
                <div class="metric-badge positive">
                    <i class="fas fa-arrow-up"></i> +12%
                </div>
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-number" data-target="@Model.TotalProducts">0</div>
                <div class="stat-label">Total Products</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card success">
                <div class="metric-badge positive">
                    <i class="fas fa-arrow-up"></i> +8%
                </div>
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-number" data-target="@Model.TotalOrders">0</div>
                <div class="stat-label">Total Orders</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card warning">
                <div class="metric-badge positive">
                    <i class="fas fa-arrow-up"></i> +15%
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-number" data-target="@Model.TotalUsers">0</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card danger">
                <div class="metric-badge positive">
                    <i class="fas fa-arrow-up"></i> +23%
                </div>
                <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stat-number" data-target="@Model.TotalRevenue">$0</div>
                <div class="stat-label">Total Revenue</div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="chart-container mb-4">
        <h3 class="chart-title">Sales Analytics</h3>
        <canvas id="salesChart" height="100"></canvas>
    </div>

    <div class="chart-container mb-4">
        <h3 class="chart-title">Category Distribution</h3>
        <canvas id="categoryChart" height="50"></canvas>
    </div>

    <div class="chart-container mb-4">
        <h3 class="chart-title">User Registrations</h3>
        <canvas id="userChart" height="100"></canvas>
    </div>

    <div class="chart-container mb-4">
        <h3 class="chart-title">Products Added</h3>
        <canvas id="productChart" height="100"></canvas>
    </div>


    <!-- Quick Actions -->
    <div class="quick-actions mb-4">
        <h3 class="chart-title">Quick Actions</h3>
        <div class="text-center">
            <a href="@Url.Action("Create", "Product")" class="action-btn">
                <i class="fas fa-plus"></i> Add Product
            </a>
            <a href="@Url.Action("Index", "Order")" class="action-btn success">
                <i class="fas fa-list"></i> View Orders
            </a>
            <a href="@Url.Action("Index", "UserManagement")" class="action-btn warning">
                <i class="fas fa-users"></i> Manage Users
            </a>
            <a href="@Url.Action("Index", "Analytics")" class="action-btn" style="background: var(--gradient-4);">
                <i class="fas fa-chart-bar"></i> Analytics
            </a>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity">
        <h3 class="chart-title">Recent Activity</h3>
        <partial name="_RecentActivityPartial" model="Model.ActivityItems"/>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard-charts.js"></script>
   
}
