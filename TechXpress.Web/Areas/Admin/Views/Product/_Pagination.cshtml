@model X.PagedList.IPagedList<TechXpress.Services.DTOs.ProductDTO>

@if (Model.PageCount > 1)
{
    <nav>
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a href="#" class="page-link pagination-link" data-page="@(Model.PageNumber - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a href="#" class="page-link pagination-link" data-page="@i">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a href="#" id="loadMoreButtonv2" class="page-link pagination-link" data-page="@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
