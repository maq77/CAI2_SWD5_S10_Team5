@model List<TechXpress.Services.DTOs.UserDTO>

<h2>Manage Users</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="MakeAdmin" asp-route-email="@user.Email" class="btn btn-primary">Make Admin</a>
                    <a asp-action="DeleteUser" asp-route-email="@user.Email" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
